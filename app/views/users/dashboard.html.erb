<div class="grid-r">
  <div class="medium-3-4">
   <div class="box">
      <div class="content-header">
        <h1>Dashboard</h1>
      </div>

      <div id="contentflash" class="contentflash error">
        <div class="view-table">
          <div class="view-row">
            <div class="flashcontent-icon"><i class="fa fa-users"></i></div>
            <div class="contentflash-text">Let op! Je hebt je nog niet bij een pool aangesloten!</div>
            <div id="flashClose" class="flash-close">
              <i class="fa fa-times flash-close-btn"></i>
            </div>
          </div>
        </div>
        <script>contentflashMessage();</script>
      </div>

      <div class='pool-filter'>
        <div class='filter-handle'>
          <h2>Filters</h2>
          <i class='fa fa-caret-right filter-arrow'></i>
        </div>
        <div class='filter-overview'>
          <form action='#'>
            <div class='grid-r'>

              <div class='small-1-2 filter-box'>
                <h3>Pools</h3>
                <div class='form-field'>
                  <div class='checkbox'>
                    <input checked id='fp1' name='filter[pool]' type='radio'>
                    <label for='fp1'>Alle pools</label>
                  </div>
                  <div class='checkbox'>
                    <input id='fp2' name='filter[pool]' type='radio'>
                    <label for='fp2'>The Next Web Leeuwarden</label>
                  </div>
                  <div class='checkbox'>
                    <input id='fp3' name='filter[pool]' type='radio'>
                    <label for='fp3'>Peter &amp; Friends</label>
                  </div>
                </div>
              </div>

              <div class='small-1-2 filter-box'>
                <h3>Berichten</h3>
                <div class='form-field'>
                  <div class='checkbox'>
                    <input checked id='fvp1' name='filter[messages]' type='radio'>
                    <label for='fvp1'>Pool notificaties</label>
                  </div>
                  <div class='checkbox'>
                    <input id='fvp2' name='filter[messages]' type='radio'>
                    <label for='fvp2'>Wedstrijden</label>
                  </div>
                  <div class='checkbox'>
                    <input id='fvp3' name='filter[messages]' type='radio'>
                    <label for='fvp3'>Nieuws</label>
                  </div>
                </div>
              </div>

              <div class='small-0 filter-submit'>
                <input class='btn green fullwidth' type='submit' value='Filters toepassen'>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="notifications">
        <div class="notification-header">
          <h2>Meldingen</h2>
        </div>
        <div class='notification-list'>
          <ul>
            <li>
              <div class='view-table'>
                <a class='grey notification-list-inner view-row' href='#modal' rel='modal:open'>
                  <div class='notification-list-icon'>
                    <i class="fa fa-comment"></i>
                  </div>
                  <div class='notification-list-txt'>
                    <p>12-06-2014 16:34 in The Next Web Leeuwarden</p>
                    <h3>Peter Alserda heeft zich bij 'The Next Web Leeuwarden aangesloten</h3>
                  </div>
                </a>
              </div>
            </li>
            <li>
              <div class='view-table'>
                <a class='grey notification-list-inner view-row' href='#modal' rel='modal:open'>
                  <div class='notification-list-icon'>
                    <i class="fa fa-envelope"></i>
                  </div>
                  <div class='notification-list-txt'>
                    <p>12-06-2014 16:34 in The Next Web Leeuwarden</p>
                    <h3>Peter Alserda heeft zich bij 'The Next Web Leeuwarden aangesloten</h3>
                  </div>
                </a>
              </div>
            </li>
            <li>
              <div class='view-table'>
                <a class='grey notification-list-inner view-row' href='#modal' rel='modal:open'>
                  <div class='notification-list-icon'>
                    <i class="fa fa-file-text"></i>
                  </div>
                  <div class='notification-list-txt'>
                    <p>12-06-2014 16:34 in The Next Web Leeuwarden</p>
                    <h3>Peter Alserda heeft zich bij 'The Next Web Leeuwarden aangesloten</h3>
                  </div>
                </a>
              </div>
            </li>
            <li>
              <div class='view-table'>
                <a class='grey notification-list-inner view-row' href='#modal' rel='modal:open'>
                  <div class='notification-list-icon'>
                    <i class="fa fa-file-text"></i>
                  </div>
                  <div class='notification-list-txt'>
                    <p>12-06-2014 16:34 in The Next Web Leeuwarden</p>
                    <h3>Peter Alserda heeft zich bij 'The Next Web Leeuwarden aangesloten</h3>
                  </div>
                </a>
              </div>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </div>
  <div class='default-0 medium-1-4'>
    <%= render "shared/aside" %>
  </div>
</div>
<script>filterHandle();</script>